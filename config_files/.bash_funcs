# ~/.bash_funcs

docker-shell () {
    if test -z "$1"; then
        echo "Provide a docker image name as an argument.";
        return;
    fi;
    docker exec -it "$1" "/bin/bash";
}

mv_dot() {
    mv "${1}" ".${1}"
}

mv_bkp() {
    mv "${1}" "${1}.bkp"
}

gen_pw() {
    cat /dev/urandom | tr -dc "\-_A-Za-z0-9" | head -c${1}
}
